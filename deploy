#!/bin/bash
set -euo pipefail
set -x
REPO=${REPO:-${CIRCLE_REPOSITORY_URL:-$(git config --get remote.origin.url)}}

temp=$(mktemp -d)
trap "rm -r '$temp'" EXIT
git clone -b gh-pages "$REPO" "$temp"
cd "$temp"
tar -xvf -
git add .
git commit -m "Updating gh-pages" 
git push -f origin gh-pages:gh-pages
